@using SpeedLimitZoneApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>login</title>

    <!-- Custom login -->
    <link rel="stylesheet" type="text/css" media="all" href="~/Content/site.css">
</head>
<body>
    <div class="login">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h1>Speed Limit Zone App</h1>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.TextBoxFor(m => m.Email, new { @placeholder= "Username", @required = "required" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

            @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @required = "required" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })   
            
            <input type="submit" value="Log in" class="btn btn-primary btn-block btn-large" />
        }
    </div>
</body>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}